{
  "name": "toddler-typing",
  "version": "1.7.0",
  "description": "A child-friendly educational app for learning letters, numbers, colors, and shapes",
  "main": "electron/main.js",
  "repository": "github:Gaskony-Home/toddler-typing",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux --x64",
    "dist:mac": "electron-builder --mac",
    "sync-android": "node scripts/sync-android.js",
    "setup:tts": "node scripts/download-tts-model.js",
    "prepare": "git config core.hooksPath .githooks",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Toddler Typing Project",
  "license": "MIT",
  "keywords": [
    "educational",
    "children",
    "learning",
    "toddler",
    "typing"
  ],
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-conf": "^1.3.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.8.0",
    "sherpa-onnx-node": "^1.12.25"
  }
}
